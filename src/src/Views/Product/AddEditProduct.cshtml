@model src.Models.Product
@{
    Layout = null;
}
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form onsubmit="return SubmitAddEdit(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="productId" />
            <input type="hidden" asp-for="organizationId"/>
            <div class="form-group">
                <label asp-for="productName" class="control-label"></label>
                <input asp-for="productName" class="form-control" />
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control"/>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productCategory" class="control-label"></label>
                <select asp-for="productCategory" class="form-control" asp-items="Html.GetEnumSelectList<src.Enum.ProductCategory>()"></select>
                <span asp-validation-for="productCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


